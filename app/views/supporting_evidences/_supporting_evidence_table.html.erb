<%= govuk_table do |table|
      table.with_caption(html_attributes: { class: "govuk-visually-hidden" }, text: t("admin.feedback.show.heading_1"))

      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(text: t('.file_name'))
          row.with_cell(text: t('.date_received'))
        end
      end

      table.with_body do |body|
        supporting_evidence.each do |item|
          body.with_row do |row|
            row.with_cell do
                    govuk_link_to(item.file_name, item.file_url)
                  end
            row.with_cell(text: item.updated_at.strftime('%A %-d %B %Y'))
          end
        end
      end
end %>
