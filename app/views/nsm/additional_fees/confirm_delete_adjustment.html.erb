<%= title t('.page_title') %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.page_title') %></h1>
    <p>
      <strong><%= t('.cost') %>: </strong><%= @adjustment.type_name %>
    <br>
      <strong><%= t('.reason') %>: </strong><%= @adjustment.reason %>
    <br>
      <strong><%= t('.net_cost_allowed') %>: </strong><%= @adjustment.allowed_net %>
    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-visually-hidden">Warning</span>
        <%= t('.warning') %>
      </strong>
    </div>
    <div class="govuk-button-group govuk-button-group-vertically-centred">
      <%# TODO: CRM457-2300 update links to correct paths/actions %>
      <%= govuk_button_to t('.yes_delete'), nsm_claim_claim_details_path(claim_id) %>
      <%= govuk_button_link_to t('.no_delete'), nsm_claim_claim_details_path(claim_id) %>
    </div>
  </div>
</div>
