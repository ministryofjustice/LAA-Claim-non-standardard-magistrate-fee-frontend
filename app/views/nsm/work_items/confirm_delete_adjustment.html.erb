<%= title t('.page_title') %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.page_title') %></h1>
    <p>
    <%= t('.cost_type', cost_type: @adjustment.work_type) %>
    <br>
    <%= t('.reason', reason: @adjustment.reason) %>
    <br>
    <%=raw t('.time_allowed', time_allowed: @adjustment.formatted_allowed_time_spent) %>
    <br>
    <%= t('.uplift_allowed', uplift_allowed: @adjustment.formatted_allowed_uplift) %>
    <br>
    <%= t('.net_cost_allowed', net_cost_allowed: @adjustment.formatted_allowed_amount)%>
    </p>
    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-visually-hidden">Warning</span>
        <%= t('.warning') %>
      </strong>
    </div>
    <div class="govuk-button-group govuk-button-group-vertically-centred">
      <%= govuk_button_to t('.yes_delete'), deletion_path, method: :delete, warning: true %>
      <%= govuk_button_link_to t('.no_delete'), nsm_adjustments_path, secondary: true %>
    </div>
  </div>
</div>
