<% content_for(:page_title) do %>
  <%= t('.adjusted_costs') %>
<% end %>

<%= render partial: 'nsm/claims/claim_summary', locals: { claim:, claim_summary: } %>
<%= render partial: 'nsm/claims/claim_nav', locals: { claim: claim, current_page: 'adjustments' } %>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <div class="govuk-tabs" data-module="govuk-tabs">
      <h2 class="govuk-heading-l">
        <%= t('.adjusted_costs') %>
      </h2>

      <ul class="govuk-tabs__list">
        <li class="govuk-tabs__list-item govuk-tabs__list-item--selected">
          <a class="govuk-tabs__tab" href="#work-items-tab">
            <%= t('.work_items') %>
          </a>
        </li>
        <li class="govuk-tabs__list-item">
          <a class="govuk-tabs__tab" href="#letters-and-calls-tab">
            <%= t('.letters_and_calls') %>
          </a>
        </li>
        <li class="govuk-tabs__list-item">
          <a class="govuk-tabs__tab" href="#disbursements-tab">
            <%= t('.disbursements') %>
          </a>
        </li>
      </ul>

      <div class="govuk-tabs__panel" id="work-items-tab">
        <%= turbo_frame_tag 'work_items', src: adjusted_nsm_claim_work_items_path(claim, anchor: "scroll_to_location"), loading: :lazy do %>
          Loading
        <% end %>
      </div>
      <div class="govuk-tabs__panel" id="letters-and-calls-tab">
        <%= turbo_frame_tag 'letters_and_calls', src: adjusted_nsm_claim_letters_and_calls_path(claim, anchor: "scroll_to_location"), loading: :lazy do %>
          Loading
        <% end %>
      </div>
      <div class="govuk-tabs__panel" id="disbursements-tab">
        <%= turbo_frame_tag 'disbursements', src: adjusted_nsm_claim_disbursements_path(claim, anchor: "scroll_to_location"), loading: :lazy do %>
          Loading
        <% end %>
      </div>
    </div>
    <%= render partial: 'shared/claim_button_group', locals: { claim: claim } %>
  </div>
</div>
