<h2 class="govuk-heading-m"><%= "#{application_summary.service_name} #{t('generic.cost')}"%></h2>

<% service_cost = application_summary.primary_quote %>

<%= govuk_table do |table|
      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(text: t('.details'))
          row.with_cell(text: t('.requested'))
          row.with_cell(text: t('.adjusted'))
        end
      end

      table.with_body do |body|
        body.with_row do |row|
          row.with_cell(text: t('.amount'))
          row.with_cell(text: service_cost.base_units)
          row.with_cell(text: '') # TODO: CRM457-1114
        end

        body.with_row do |row|
          row.with_cell(text: t('.cost'))
          row.with_cell(text: service_cost.formatted_base_cost_per_unit)
          row.with_cell(text: '') # TODO: CRM457-1114
        end

        body.with_row do |row|
          row.with_cell(text: t('.total'))
          row.with_cell(text: service_cost.formatted_base_cost)
          row.with_cell(text: '') # TODO: CRM457-1114
        end
      end
    end %>
<%= link_to t(".adjust_service_cost"),
            '#', # TODO: edit_prior_authority_application_service_cost_path(application, service_cost.id),
            class: 'govuk-button govuk-button--secondary' %>

