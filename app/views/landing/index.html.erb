<% title t('.page_title') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-xl"><%= t '.heading' %></h1>
    <p class="govuk-body"><%= t '.content_line_1' %></p>
    <p class="govuk-body"><%= t '.content_line_2' %></p>
    <p class="govuk-body"><%= t '.content_line_3' %>
      <%= link_to t('.content_link'), "https://lsconlinesso.legalservices.gov.uk/",
            class: 'govuk-link',
            role: 'link',
            target: '_blank' %>
    </p>
  </div>
  <div class="govuk-grid-column-three-quarters govuk-!-margin-top-9">
    <a href="<%= user_azure_ad_omniauth_authorize_path %>" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
    Start now
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
    </svg>
    </a>
  </div>
</div>

