<%= govuk_details(summary_text: t('.link_title')) do %>
  <%=
    caseworker_total= NumberTo.pounds(disbursements.flat_map(&:last).sum(&:caseworker_total_cost))
    provider_total= NumberTo.pounds(disbursements.flat_map(&:last).sum(&:provider_requested_total_cost))
    head = [t('.provider_total'), t('.caseworker_total')]
    rows = [[provider_total, caseworker_total ]]
    govuk_table( head:, rows:)
  %>
<% end %>
